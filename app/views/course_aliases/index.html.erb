<div class="content_wrapper">
  <p id="notice"><%= notice %></p>

  <h1>Course Aliases</h1>

  <table>
    <thead>
      <tr>
        <th>Course alias</th>
        <th>Course name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @course_aliases.each do |course_alias| %>
        <tr>
          <td><%= course_alias.course_alias %></td>
          <td><%= course_alias.course_name.name %></td>
          <% if can? :update, course_alias %>
            <td><%= link_to 'Edit', edit_course_alias_path(course_alias) %></td>
          <% end %>
          <% if can? :destroy, course_alias %>
            <td><%= link_to 'Destroy', course_alias, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Course Alias', new_course_alias_path %>
</div>
