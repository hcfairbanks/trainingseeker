<div class="content_wrapper">
  <p id="notice"><%= notice %></p>

  <h1>Seats</h1>

  <table>
    <thead>
      <tr>
        <th>First name</th>
        <th>Middle name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Id code</th>
        <th>Course</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @seats.each do |seat| %>
        <tr>
          <td><%= seat.first_name %></td>
          <td><%= seat.middle_name %></td>
          <td><%= seat.last_name %></td>
          <td><%= seat.email %></td>
          <td><%= seat.phone %></td>
          <td><%= seat.id_code %></td>
          <td><%= seat.course_id %></td>
          <td><%= seat.user_id %></td>
          <td><%= link_to 'Show', seat %></td>
          <td><%= link_to 'Edit', edit_seat_path(seat) %></td>
          <td><%= link_to 'Destroy', seat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Seat', new_seat_path %>
</div>
