<div class="content_wrapper">
  <h1>Purchases</h1>

  <% unless @purchases.empty? %>
    <table>
      <thead>
        <tr>
          <th>Course Name</th>
          <th>Number of Seats</th>
          <th>Price</th>
          <th>Status</th>
          <th>Created</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @purchases.each do |purchase| %>
          <tr>
            <td><%= purchase.course.course_name.try(:name) || purchase.course_id %></td>
            <td><%= purchase.number_of_seats %></td>
            <td><%= number_to_currency(purchase.price) %></td>
            <td><%= purchase.status %></td>
            <td><%= purchase.created_at.strftime("%Y-%m-%d %I:%M %p") %></td>
            <td><%= link_to 'Show', purchase %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
      <p>You have no purchases yet.</p>
  <% end %>
</div>
